<% layout("/layouts/boilerplate") %>

<div class="container mt-3">
  <div class="row">
    <!-- Listing Title -->
    <div class="col-8 offset-2">
      <h3><b><%= listing.title || "No Title" %></b></h3>
    </div>

    <% if(listing) { %>
      <!-- Listing Card -->
      <div class="card listing-card col-6 offset-3 show-card mt-3">
        <% if(listing.image && listing.image.url) { %>
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <% } else { %>
          <img src="/images/default.jpg" class="card-img-top show-img" alt="default_image">
        <% } %>

        <div class="card-body">
          <p class="card-text">Owned by <%= listing.owner ? listing.owner.username : "Unknown" %></p>
          <p class="card-text"><%= listing.description || "No Description" %></p>
          <p class="card-text">&#8377;<%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "N/A" %></p>
          <p class="card-text"><%= listing.location || "Unknown Location" %></p>
          <p class="card-text"><%= listing.country || "Unknown Country" %></p>
        </div>
      </div>

      <!-- Edit/Delete Buttons for Owner -->
      <% if (currUser && listing.owner && currUser._id.toString() === listing.owner._id.toString()) { %>
        <div class="btns d-flex mb-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-dark offset-5" type="submit">Delete</button>
          </form>
        </div>
      <% } %>

      <!-- Leave a Review Form -->
      <% if(currUser){ %>
        <div class="col-8 offset-2 mb-3 mt-3">
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
            <!-- Comment -->
            <div class="mb-3 mt-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5">
              <label for="comment" class="form-label">Comment</label>
              <textarea id="comment" rows="5" required class="form-control" name="review[comment]"></textarea>
              <div class="invalid-feedback">Please add a comment for review</div>
            </div>

            <button type="submit" class="btn btn-outline-dark">Submit</button>
          </form>
          <hr/>
        </div>
      <% } %>

      <!-- All Reviews -->
      <h4>All Reviews</h4>
      <div class="row">
        <% if(listing.reviews && listing.reviews.length > 0){ %>
          <% for (let review of listing.reviews) { %>
            <% if(review && review.author){ %>
              <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                  <div class="card-title"><%= review.author.username %></div>
                  <div class="card-text"><%= review.comment %></div>
                  <div class="card-text"><%= review.rating %> stars</div>
                </div>
                <% if(currUser && review.author._id.toString() === currUser._id.toString()){ %>
                  <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-sm btn-dark">Delete</button>
                  </form>
                <% } %>
              </div>
            <% } %>
          <% } %>
        <% } else { %>
          <p class="ms-3">No reviews yet.</p>
        <% } %>
      </div>
    <% } %>
</div>

<!-- Required CSS for Starability (Add to your boilerplate head) -->
<style>
  .starability-slot input { display: none; }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/starability/starability-all.min.css">
